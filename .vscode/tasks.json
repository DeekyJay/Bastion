{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Plugin",
            "type": "shell",
            "command": "./gradlew build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "java",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+\\.java):(\\d+):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "Watch Plugin",
            "type": "shell",
            "command": "./gradlew build -t",
            "isBackground": true,
            "problemMatcher": {
                "owner": "java",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.+\\.java):(\\d+):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^:compileJava$",
                    "endsPattern": "^BUILD SUCCESSFUL"
                }
            },
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            }
        },
        {
            "label": "Start Dev Server",
            "type": "shell",
            "command": "docker-compose up",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            },
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Stop Dev Server",
            "type": "shell",
            "command": "docker-compose down",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": "none"
        },
        {
            "label": "Dev Environment: Start",
            "dependsOrder": "sequence",
            "dependsOn": ["Build Plugin", "Start Dev Server", "Watch Plugin"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Dev Environment: Stop",
            "dependsOn": ["Stop Dev Server"],
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "View Server Logs",
            "type": "shell",
            "command": "docker-compose logs -f mc-dev",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}